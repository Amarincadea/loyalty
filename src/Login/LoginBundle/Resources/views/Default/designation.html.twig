{% extends 'base.html.twig' %}
{% block body %}
    <br/>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
                <ul class="nav nav-pills flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link text-white bg-warning" href="{{ path('login_login_homepage') }}"><h5>My Dashboard</h5></a>
                    </li>

                </ul>
            </nav>

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Home / Designations </li>
                </ol>
                <div class="card">
                    <div class="card-block">
                        <form method="POST" action="{{ path('des_add') }}">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Designation</label>
                                <input type="text"  class="form-control" id="job_title" aria-describedby="emailHelp" name="designation" placeholder="Add new designation" required>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Base Amount</label>
                                <input type="number"  class="form-control" id="job_title" aria-describedby="emailHelp" name="base_amount" placeholder="Initial Base Amount" required>
                            </div>
                            <button type="submit" class="btn btn-warning">Save</button>
                        </form>
                    </div>
                </div>
                <div class="card">
                    <div class="card-block">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Designation</th>
                                <th>Base Amount</th>
                                <th>Action</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for desig in designation %}
                                <tr>
                                    <td>{{ desig.designation }}</td>
                                    <td>{{ desig.base }}</td>
                                    <th><a class="btn btn-danger" href="/des_remove/{{ desig.dId }}" role="button">Remove</a></th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </main>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}