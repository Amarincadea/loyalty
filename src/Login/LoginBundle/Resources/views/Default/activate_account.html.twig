{% extends 'base.html.twig' %}
{% block body %}
    <br/>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
                <ul class="nav nav-pills flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link text-white bg-warning" href="#"><h5>My Menu</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('hr_optin') }}"><h5>Opt-In Request</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('activate_account') }}"><h5>Activate Account</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('hr_payout') }}"><h5>Payout Request</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('hr_account') }}"><h5>Accounts</h5></a>
                    </li>
                </ul>
            </nav>

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Home / Activate account </li>
                </ol>
                {% if optin_error is defined %}
                    <div class="alert alert-danger" role="alert">
                        <strong>Oh snap!</strong> {{ optin_error }}
                    </div>
                {% endif %}
                <!--job position-->
                <div class="row">
                    {% for optins in optin_details %}
                        <div class="col-sm-6">
                            <div class="card">
                                <h4 class="card-header">{{ optins.tmName }}/{{ optins.tmId }}</h4>
                                <div class="card-block">
                                    <table class="table">
                                        <tr>
                                            <th>Designtion</th>
                                            <td>:</td>
                                            <td>{{ optins.tmDesignation }}</td>
                                        </tr>
                                        <tr>
                                            <th>Department</th>
                                            <td>:</td>
                                            <td>{{ optins.tmDepartment }}</td>
                                        </tr>
                                    </table>

                                    <form  method="POST" action="{{ path('update_doj') }}">
                                        <div class="form-group">
                                            <label for="example-date-input">Date Of Joining</label>
                                                <input type="hidden" name="TM_id" value="{{ optins.tmId }}">
                                                <input class="form-control" type="date" value="" id="example-date-input" name="doj" required>
                                       </div>
                                        <button class="btn btn btn-outline-warning " type="submit">Save</button>
                                    </form>

                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
                <!--end job positions-->
            </main>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}