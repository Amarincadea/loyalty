{% extends 'base.html.twig' %}
{% block body %}
    <br/>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
                <ul class="nav nav-pills flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link text-white bg-warning" href="#"><h5>My Menu</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('fm_payout') }}"><h5>Payout Request</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('budget_year') }}"><h5>Budget Year Analysis</h5></a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-warning" href="{{ path('fm_account') }}"><h5>Accounts</h5></a>
                    </li>
                </ul>
            </nav>

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Home / Budget Year Analysis </li>
                </ol>
                <div class="card">
                    <div class="card-block">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Team Member ID</th>
                                <th>Department</th>
                                <th>Amount</th>
                                <th>Payout Date</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for tm in tm %}
                            <tr>
                                <th>{{ tm.itNo }}</th>
                                <td>{{ tm.tmDoj }}</td>
                                <td>{{ tm.tmDepartment }}</td>
                            </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </main>
        </div>
    </div>
{% endblock %}
