{% extends 'base.html.twig' %}
{% block body %}
    <br/>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
                <ul class="nav nav-pills flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link text-white bg-warning" href="{{ path('login_login_homepage') }}"><h5>My Dashboard</h5></a>
                    </li>

                </ul>
            </nav>

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Home / LRP Model </li>
                </ol>
                <div class="card">
                    <div class="card-block">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Year</th>
                                <th>LRP Percentage</th>
                                <th>Minimum Withdrawable</th>
                                <th>Maximum Withdrawable</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for lrp in lrp %}
                                <tr>
                                    <th>During {{ lrp.year }}th year</th>
                                    <th>{{ lrp.lrpRewardPercentage }}%</th>
                                    <th>{{ lrp.minPercentage }}%</th>
                                    <th>{{ lrp.maxPercentage }}%</th>
                                    <th><a class="btn btn-warning" href="/lrp_edit/{{ lrp.lrpId }}" role="button">Edit</a></th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </main>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}