{% extends 'base.html.twig' %}
{% block body %}
    <br/>
    <div class="container-fluid">
        <div class="row">
            <nav class="col-sm-3 col-md-2 hidden-xs-down bg-faded sidebar">
                <ul class="nav nav-pills flex-column text-white">
                    <li class="nav-item">
                        <a class="nav-link text-white bg-warning" href="{{ path('login_login_homepage') }}"><h5>My Dashboard</h5></a>
                    </li>

                </ul>
            </nav>

            <main class="col-sm-9 offset-sm-3 col-md-10 offset-md-2 pt-3">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item active">Home / Accounts </li>
                </ol>
                <div class="card">
                    <div class="card-block">
                        <form  method="POST" action="{{ path('dep_add') }}">
                            <div class="form-group">
                                <label for="exampleInputEmail1">Department Name</label>
                                <input type="text"  class="form-control" id="job_title" aria-describedby="emailHelp" name="depname" placeholder="Add new department name" required>
                            </div>
                            <button type="submit" class="btn btn-warning">Save</button>
                        </form>
                    </div>
                </div>
                <div class="card">
                    <div class="card-block">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th>Department Name</th>
                                <th>Actions</th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for dep in department %}
                                <tr>
                                    <th>{{ dep.departmentName }}</th>
                                    <th><a class="btn btn-danger" href="/dep_remove/{{ dep.departmentId }}" role="button">Remove</a></th>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>

            </main>
        </div>
    </div>
{% endblock %}
{% block javascripts %}
{% endblock %}