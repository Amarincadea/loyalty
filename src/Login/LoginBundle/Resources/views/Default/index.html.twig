<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>{% block title %}incdea.lrp | Welcome{% endblock %}</title>
    {% block stylesheets %}
        <link rel="icon" type="image/x-icon" href="{{ asset('images/l.ico') }}" />
        <!-- Bootstrap core CSS -->
        <link href="{{ asset('css/bootstrap.min.css') }}" rel="stylesheet">
        <!-- Custom styles for this template -->
        <link href="{{ asset('css/carousel.css') }}" rel="stylesheet">
        <link href="{{ asset('css/sticky-footer.css') }}" rel="stylesheet">
    {% endblock %}
</head>

<body>
{% block body %}
    <nav class="navbar navbar-toggleable-md fixed-top navbar-inverse bg-inverse">
        <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse"
                aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <a class="navbar-brand text-warning" href="#">
            <h4>incadea.lrp<img src="{{ asset('images/in.png') }}" height="45px" width="45px"/></h4>
        </a>
        <div class="collapse navbar-collapse" id="navbarCollapse">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Help</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">About</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link text-white" href="#">Developer</a>
                </li>
            </ul>

            <!--Login application form-->
            <form class="form-inline mt-2 mt-md-0 text-warning" method="POST" action="{{ path('login_login_homepage') }}">
                <div class="form-group">
                    <input type="email" class="form-control text-warning" id="InputEmail" aria-describedby="emailHelp" placeholder="Email Address" name="email" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control text-warning" id="exampleInputPassword1" placeholder="Password" name="pwd" required>
                </div>
                <div class="form-group">
                    <select class="form-control" name="role" required>
                        <option  disabled="disabled" selected="selected">Login As</option>
                        <option>Team Member</option>
                        <option>Finance Manager</option>
                        <option>HR Manager</option>
                        <option>Department Head</option>
                        <option>Admin</option>
                        <option>Super Admin</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="hidden" name="remember" value="remember-me">
                </div>
                <button class="btn btn btn-outline-warning my-2 my-sm-0" type="submit">Login</button>
            </form>
            <button type="button" class="btn btn btn-outline-warning my-2 my-sm-0" data-toggle="modal" data-target="#myModal">Enroll</button>

            <!--End of Login application form-->
        </div>
        <br/>
        {% if name is defined %}
            <div class="alert alert-danger" role="alert">
                <strong>Oops!</strong> {{ name }}
            </div>
        {% endif %}
        {% if failure is defined %}
            <div class="alert alert-danger" role="alert">
                {{ failure }}
            </div>
        {% endif %}
        {% if success is defined %}
            <div class="alert alert-success" role="alert">
                {{ success }}
            </div>
        {% endif %}
    </nav>
    <!-- Optin Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">OPT-IN Request</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="{{ path('place_optin') }}">

                        <div class="form-group">
                            <label for="inlineFormInput">Team Member Name</label>
                            <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Team Member " name="tmname" required>
                        </div>
                        <div class="form-group">
                            <label  for="inlineFormInput">Team Member ID</label>
                            <input type="text" class="form-control mb-2 mr-sm-2 mb-sm-0" id="inlineFormInput" placeholder="Team Member ID" name="tmid" required>
                        </div>
                        <div class="form-group">
                            <label for="inlineFormInputGroup">Email Address</label>
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <input type="email" class="form-control" id="inlineFormInputGroup" placeholder="Email Address" name="email" required><div class="input-group-addon">@incadea.com</div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="department">Department</label>
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" id="department" name="department" required>
                                    <option  disabled="disabled" selected="selected">Select your Department</option>
                                    {% for department_name in department_details %}
                                        <option>{{ department_name.departmentName }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="designation">Designation</label>
                            <div class="input-group mb-2 mr-sm-2 mb-sm-0">
                                <select class="form-control" id="designation" name="designation" required>
                                    <option  disabled="disabled" selected="selected">Select your Designation</option>
                                    {% for designation_name in designation_details %}
                                        <option>{{ designation_name.designation }}</option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                        <br/>
                        <div class="modal-footer">
                            <button type="reset" class="btn btn-secondary">Clear</button>
                            <button type="submit" class="btn btn-outline-warning">Apply Now</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
    <!-- Optin Modal end -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>
        <div class="carousel-inner" role="listbox">
            <div class="carousel-item active">
                <img class="first-slide" src="{{ asset('images/c2.jpg') }}" alt="First slide">
            </div>
            <div class="carousel-item">
                <img class="second-slide" src="{{ asset('images/c3.jpg') }}" alt="Second slide">
            </div>
            <div class="carousel-item">
                <img class="third-slide" src="{{ asset('images/c4.jpg') }}" alt="Third slide">
            </div>
        </div>
        <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>



{% endblock %}

